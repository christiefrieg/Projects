@model Dashboard.ViewModels.HomeViewModel
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - My Dashboard</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <script src="https://cdnjs.cloudflare.com/ajax/libs/crypto-js/3.1.2/rollups/aes.js"></script>
        <meta name="viewport" content="width=device-width" />
        <link rel="stylesheet" type="text/css" href="/Content/Site.css">
        <script type="text/javascript" src="~/Scripts/angular.min.js"></script>
        <script src="/Scripts/jquery-1.8.2.min.js" type="text/javascript"></script>
        <script src="~/Scripts/app.js" type="text/javascript"></script>        
        <script src="~/Scripts/angular-ui/Controllers/FeedController.js"></script>
        <script src="~/Scripts/angular-ui/Controllers/MainController.js"></script>

    </head>
<body id="body" ng-app="angularDashboardApp" ng-controller="MainController">
    <header>
        <div class="content-wrapper">
            <div class="float-left">
                <p class="site-title">@Html.ActionLink("My Dashboard", "Index", "Home")</p>
            </div>
            <div class="float-right">
                <section id="login">
                    @{Html.RenderPartial("~/Views/PartialView/_LoginPartial.cshtml", new Dashboard.ViewModels.LoginViewModel());}
                </section>
                <nav>
                    <ul id="menu">
                        <li>@Html.ActionLink("Dashboard", "Index", "Home")</li>
                        <li>@Html.ActionLink("Manage Feeds", "ManageFeeds", "Feed")</li>
                        <li>@Html.ActionLink("My Account", "ManageAccount", "Account")</li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year - My Dashboard</p>
            </div>
        </div>
    </footer>
</body>
    @RenderSection("scripts", required: false)
    </>
</html>
